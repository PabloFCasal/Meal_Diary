<!DOCTYPE html>


<html>
  <head>
    <title>Meal Diary</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <h2>HEADER</h2>

    <header>
      <nav>
        <ul>
          <li><%= link_to_unless_current "Home", :controller => "welcome", :action => "index" %> </li>
          <li><%= link_to_unless_current "Foods", :controller => "foods", :action => "index" %></li>
        </ul>
      </nav>
    </header>

<h1><%= Time.now.strftime("%d/%m/%Y") %></h1>

<% Moment.all.each do |moment| %>
  <div>
    <h2><%= moment.name %></h2>
    <ul>
      <li><%= link_to "New Portion", :controller => "portions", :action => "new" %></li>
      <li><%= link_to "Portion's List", :controller => "portions", :action => "index" %></li>
    </ul>
  </div>
<% end %>


  <body>
    <%= yield %>
  </body>
</html>
